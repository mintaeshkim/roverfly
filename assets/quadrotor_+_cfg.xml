<!-- Quadrotor with `+` configuration. Front: Along body X-axis -->

<mujoco model="quadrotor_+">
    <include file="empty_world_center.xml"/>
    <compiler angle="degree" inertiafromgeom="true" coordinate="local"/>
    <option	timestep="0.002" gravity="0 0 -9.81" density="1.225" viscosity="1.789e-5" integrator="RK4"/>
    <default>
        <joint armature="1" damping="1" limited="true"/>
        <geom conaffinity="0" condim="3" density="5.0" friction="1 0.5 0.5" margin="0.01" rgba="0.8 0.6 0.4 1"/>
    </default>

    <worldbody>
        <body name="core" pos="0 0 0">
            <geom name="core_geom" type="box" pos="0 0 0" quat="1 0 0 0" size=".055 .045 .025" rgba="0 0.15 0.47 1" mass="0.6"/>
            <joint name="root" type="free" damping="0" armature="0" pos="0 0 0" limited="false"/>
            <geom name="arm_front0" type="box" pos="0.1025 0 0" size=".0525 .005 .005" quat="1 0 0 0" rgba=".8 .8 .8 1" mass=".02"/>
            <geom name="arm_back0" type="box" pos="-0.1025 0 0" size=".0525 .005 .005" quat="0 0 0 1" rgba=".8 .8 .8 1" mass=".02"/>
            <geom name="arm_left0" type="box" pos="0 0.0975 0" size=".04975 .005 .005" quat=".707 0 0 .707" rgba=".8 .8 .8 1" mass=".02"/>
            <geom name="arm_right0" type="box" pos="0 -0.0975 0" size=".04975 .005 .005" quat=".707 0 0 -.707" rgba=".8 .8 .8 1" mass=".02"/>
    
            <body name="arm_front1" pos=".15 0 0">
                <geom type="box" pos=".01 0 .005" size=".01 .005 .01" quat="1 0 0 0" rgba=".8 .8 .8 1" mass=".01"/>
                <body name="thruster0" pos="0.01 0 0.015">
                    <geom type="cylinder" pos="0 0 .0025" size=".05 .0025" quat="1 0 0 0" rgba="1 0.67 0 0.5" mass=".02"/>
                    <site name="motor0" type="cylinder" pos="0 0 .0025" size=".01 .0025" quat="1 0 0 0" rgba=".8 .8 .8 1"/>
                </body>
            </body>

            <body name="arm_back1" pos="-.15 0 0">
                <geom type="box" pos="-.01 0 .005" size=".01 .005 .01" quat="0 0 0 1" rgba=".8 .8 .8 1" mass=".01"/>
                <body name="thruster1" pos="-0.01 0 .015">
                    <geom type="cylinder" pos="0 0 .0025" size=".05 .0025" quat="1 0 0 0" rgba="1 0.67 0 0.5" mass=".02"/>
                    <site name="motor1" type="cylinder" pos="0 0 .0025" size=".01 .0025" quat="1 0 0 0" rgba=".8 .8 .8 1"/>
                </body>
            </body>

            <body name="arm_left1" pos="0 .15 0">
                <geom type="box" pos="0 .01 .005" size=".01 .005 .01" quat=".7071068 0 0 .7071068" rgba=".8 .8 .8 1" mass=".01"/>
                <body name="thruster2" pos="0 0.01 0.015">
                    <geom type="cylinder" pos="0 0 .0025" size=".05 .0025" quat="1 0 0 0" rgba="1 0.67 0 0.5" mass=".02"/>
                    <site name="motor2" type="cylinder" pos="0 0 .0025" size=".01 0.0025" quat="1 0 0 0" rgba=".8 .8 .8 1"/>
                </body>
            </body>

            <body name="arm_right1" pos="0 -.15 0">
                <geom type="box" pos="0 -.01 .005" size=".01 .005 .01" quat=".7071068 0 0 -.7071068" rgba=".8 .8 .8 1" mass=".01"/>
                <body name="thruster3" pos="0 -0.01 .015">
                    <geom type="cylinder" pos="0 0 .0025" size=".05 .0025" quat="1 0 0 0" rgba="1 0.67 0 0.5" mass=".02"/>
                    <site name="motor3" type="cylinder" pos="0 0 .0025" size=".01 .0025" quat="1 0 0 0" rgba=".8 .8 .8 1"/>
                </body>
            </body>

            <site name="x_axis" type="box" pos=".1 .0 .0" size=".1 .004 .004" quat="1 0 0 0" rgba="1 0 0 0.2"/>
            <site name="y_axis" type="box" pos=".0 .1 .0" size=".1 .004 .004" quat=".707 0 0 .707" rgba="0 1 0 0.2"/>
            <site name="z_axis" type="box" pos=".0 .0 .1" size=".1 .004 .004" quat="-.707 0 .707 0" rgba="0 0 1 0.2"/>
        </body>

    </worldbody>

    <actuator>
        <motor name="Motor0" ctrllimited="true" ctrlrange="0 5" gear="0  0. 1. 0. 0. -0.025" site="motor0"/>
        <motor name="Motor1" ctrllimited="true" ctrlrange="0 5" gear="0  0. 1. 0. 0. -0.025" site="motor1"/>
        <motor name="Motor2" ctrllimited="true" ctrlrange="0 5" gear="0  0. 1. 0. 0.  0.025" site="motor2"/>
        <motor name="Motor3" ctrllimited="true" ctrlrange="0 5" gear="0  0. 1. 0. 0.  0.025" site="motor3"/>
    </actuator>
</mujoco>
